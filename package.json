{
  "name": "vivu",
  "version": "1.0.0",
  "description": "A highly scalable vue boilerplate using vite",
  "keywords": [
    "vue",
    "typescript",
    "atomic-design",
    "ddd",
    "spa",
    "atomic-design-example",
    "ddd-example",
    "boilerplate",
    "vue-boilerplate",
    "vite"
  ],
  "license": "MIT",
  "author": "Faizal Andyka",
  "repository": {
    "type": "git",
    "url": "https://github.com/logustra/vivu"
  },
  "main": "index.js",
  "bugs": "https://github.com/logustra/vivu/issues",
  "scripts": {
    "prepare": "husky install",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "dev": "cp env/env.dev .env && vite --mode dev",
    "build:dev": "pnpm clean:dist && cp env/env.dev .env && vite build --mode prod",
    "build:prod": "pnpm clean:dist && cp env/env.prod .env && vite build --mode prod",
    "build:report": "pnpm clean:dist && cp env/env.prod .env && vite build --mode report",
    "serve": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm clean:coverage && vitest --coverage --mode test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@iconify/json": "^1.1.434",
    "@intlify/vite-plugin-vue-i18n": "^2.4.0",
    "@rollup/plugin-yaml": "^3.1.0",
    "@types/js-cookie": "^2.2.7",
    "@vitejs/plugin-legacy": "^1.7.1",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vue/compiler-sfc": "^3.2.4",
    "@vuedx/typecheck": "^0.6.3",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "@vuelidate/core": "^2.0.0-alpha.24",
    "@vuelidate/validators": "^2.0.0-alpha.21",
    "@vueuse/integrations": "^4.11.2",
    "autoprefixer": "^10.4.0",
    "axios": "^0.21.1",
    "camelcase": "^6.2.0",
    "dotenv-cli": "^4.0.0",
    "element-plus": "1.0.2-beta.44",
    "husky": "^7.0.1",
    "js-cookie": "^3.0.0",
    "postcss": "^8.4.1",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.38.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2",
    "unplugin-icons": "^0.12.20",
    "unplugin-vue-components": "^0.17.2",
    "vite": "^2.8.6",
    "vite-plugin-fonts": "^0.2.2",
    "vite-plugin-style-import": "^0.10.1",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.13",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/vue": "^6.5.0",
    "chalk": "^4.1.2",
    "commander": "^7.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0"
  },
  "volta": {
    "node": "14.17.1"
  }
}
